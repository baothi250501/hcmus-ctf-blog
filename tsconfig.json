{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "esnext", //
    "lib": ["dom", "dom.iterable", "esnext"], //
    "allowJs": true, //
    "skipLibCheck": true, //
    "strict": true, //
    "forceConsistentCasingInFileNames": true, //
    "noEmit": true, //
    "esModuleInterop": true, //
    "module": "esnext", //
    "moduleResolution": "node", //
    "resolveJsonModule": true, //
    "isolatedModules": true, //
    "jsx": "preserve", //
    "incremental": true, //
    "baseUrl": "./src", //
    "jsxImportSource": "@emotion/react",
    "paths": {
      "@/public/*": ["../public/*"],
      "@/styles/*": ["./styles/*"],
      "@/api/*": ["./api/*"],
      "@/lib/*": ["./lib/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/modules/*": ["./modules/*"],
      "@/components/*": ["./components/*"],
      "@/pages/*": ["./pages/*"],
    },
    "newLine": "lf" //
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.jsx",
    "**/*.json"
  ],
  "exclude": ["node_modules", ".*/"]
}
